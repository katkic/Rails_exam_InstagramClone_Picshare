<div class="outer-form-container box-border">
  <h1 class="top-title">Picshare</h1>

  <div class="form-container">
    <%= form_with scope: :session, url: session_path, local: true do |f| %>
      <table>
        <tr>
          <th class="form-title"><%= f.label :email, 'メールアドレス' %></th>
        </tr>
        <tr>
          <td><%= f.email_field :email, class: 'form-input' %></td>
        </tr>
        <tr>
          <th class="form-title"><%= f.label :password, 'パスワード' %></th>
        </tr>
        <tr>
          <td><%= f.password_field :password, class: 'form-input' %></td>
        </tr>
        <tr>
          <td><%= f.submit 'ログイン', class: 'form-btn' %></td>
        </tr>
      </table>
    <% end %>
  </div><!-- /.login-form -->
</div><!-- /.login-container -->
