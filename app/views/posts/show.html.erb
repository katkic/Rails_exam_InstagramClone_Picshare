<header>
  <p>header</p>
</header>

<div class="notice">
  <h2><%= notice %></h2>
</div><!-- /.notice -->

<h2>投稿詳細</h2>

<div class="post-container">
  <%= link_to '投稿一覧へ戻る', posts_path %>

  <div class="post-header clearfix">
    <%= image_tag @post.user.image, alt: 'ユーザーアイコン', size: '50x50' %>
    <%= @post.user.user_name %>
    <%= link_to '編集', edit_post_path(@post) %> |
    <%= link_to '削除', post_path(@post),
          method: :delete, data: { confirm: '削除してもいいですか？' }  %>
  </div><!-- /.post-header -->

  <div class="post-picture">
    <p><%= image_tag @post.image.url, alt: '画像の説明はありません', size: '500' %></p>
  </div><!-- /.post-picture -->

  <div class="post-icon">
    <i class="far fa-heart"></i>
    <i class="far fa-comment"></i>
    <i class="far fa-paper-plane"></i>
    <i class="far fa-bookmark"></i>
  </div><!-- /.post-icon -->

  <div class="post-caption">
    <%= @post.user.user_name %>
    <%= @post.caption %>
  </div><!-- /.post-caption -->
  <div class="post-time">
    <p><%= @post.created_at.strftime('%Y年%m月%d日 %H:%M') %></p>
  </div><!-- /.post-time -->
</div><!-- /.post-container -->

<footer>
  <p>footer</p>
</footer>
